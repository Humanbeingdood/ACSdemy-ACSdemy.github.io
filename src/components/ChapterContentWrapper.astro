---
const { chapter } = Astro.props;
const { Content } = await chapter.render();
---

<div id="chapter-wrapper">
    <Content />
</div>

<style lang="scss">

    #chapter-wrapper {

        :global( h1 ) {
            color: var(--heading-color);
            font-family: "Harmonia Sans";
            font-size: 56px;
            margin-top: -10px;
            margin-bottom: 42px;
        }

        :global( h2 ) {
            color: var(--heading-color);
            font-family: "Harmonia Sans";
            font-size: 34px;
            margin-top: 48px;
            margin-bottom: 16px;
        }

        :global( h1 + h2 ) { margin-top: 42px }
        
        :global( h3 ) {
            color: var(--heading-color); 
            font-family: "Harmonia Sans";
            font-size: 18px;
            margin-bottom: 12px;
        }

        :global( p ) {
            color: var(--text-color);
            font-family: "Akkurat";
            font-size: 18px;

            a { color: var(--highlight-color) }
        }

        :global( p + p ) { margin-bottom: 8px }
    }

</style>